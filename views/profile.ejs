-->
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=Edge">
     <meta name="description" content="">
     <meta name="keywords" content="">
     <meta name="author" content="">
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

     <link rel="stylesheet" href="/css/bootstrap.min.css">
     <link rel="stylesheet" href="/css/font-awesome.min.css">
     <link rel="stylesheet" href="/css/aos.css">
     <link rel="stylesheet" href="/css/owl.carousel.min.css">
     <link rel="stylesheet" href="/css/owl.theme.default.min.css">

     <!-- MAIN CSS -->
     <link rel="stylesheet" href="/css/templatemo-digital-trend.css">

     <style>
         .avatar {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

     </style>
</head>
<body>

     <!-- MENU BAR -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">
              <!-- <i class="fa fa-line-chart"></i> -->
              <img src="./images/logo.png">
              Interview Tracker
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                         <a href="/topic" class="nav-link">TOPICS</a>
                     </li>
                     <li class="nav-item">
                         <a href="/" class="nav-link">INTERVIEW EXPERIENCE</a>
                     </li>
                     <li class="nav-item">
                         <a href="/" class="nav-link">CONTACT US</a>
                     </li>
                    <% if (user) { %>
                          <li class = "nav-item">
                              <div class="dropdown">
                                   <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                                        <img class="avatar" src="data:image/<%=user.image.contentType%>;base64,<%=user.image.data.toString('base64')%>" alt="Profile image">
                                      <span class="caret"></span>
                                   </button>
                                   <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                                        <li>     
                                             <!-- <a href="/" style="color:black" class="nav-link"><%= user.username %></a> -->
                                             <p class = "nav-link" style="color:black"><em><%= user.username %></em></p>
                                          </li>
                                          <li>     
                                             <a href="/" style="color:black" class="nav-link">PROFILE</a>
                                          </li>     
                                     <li>     
                                        <a href="logout" style="color:black" class="nav-link">LOGOUT</a>
                                     </li>
                                   </ul>
                                 </div>
                          </li>
                       <% } else { %>
                    <li class="nav-item">
                        <a href="/login" class="nav-link smoothScroll">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/signup" class="nav-link contact">Sign Up</a>
                    </li>

                       <% } %>
               </ul>
            </div>
        </div>
    </nav>

    <div class="page-wrapper" style ="padding-top: 27px;">
            <div class="row">
                <!-- Column -->
                <div class="col-lg-4 col-xlg-3 col-md-5">
                    <div class="card">
                        <div class="card-body profile-card">
                            <center class="m-t-30"><img src="data:image/<%=user.image.contentType%>;base64,<%=user.image.data.toString('base64')%>"
                                    class="rounded-circle" width="150" />
                                <h4 class="card-title m-t-10"><strong><%= user.username %></strong></h4>
                            </center>
                        </div>
                    </div>
                </div>
                <!-- Column -->
                <!-- Column -->
                <div class="col-lg-8 col-xlg-9 col-md-7">
                    <div class="card">
                        <div class="card-body">
                            <form method="POST" class="form-horizontal form-material" action="profile/<%= user._id %>" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-md-12 mb-0">Full Name</label>
                                    <div class="col-md-12">
                                        <p><strong><%= user.username %></strong></p>
                                    </div>
                                </div>
                                <div class="name error"></div>
                                <div class="form-group">
                                    <label for="example-email" class="col-md-12">Email</label>
                                    <div class="col-md-12">
                                        <p><strong><%= user.email %></strong></p>
                                    </div>
                                </div>
                                <div class="email error"></div>
                                <div class="form-group">
                                    <label for="example-email" class="col-md-12">Profile Image(png only)</label>
                                    <div class="col-md-12">
                                        <input type="file" name="image" class="form-control pl-0 form-control-line" id="image" value="">
                                    </div>
                                </div>
                                
                                
                                <div class="form-group">
                                    <div class="col-sm-12 d-flex">
                                        <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">Update
                                            Profile Picture</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Column -->
            </div>
            
        <!-- </div> -->
    </div>    
</body>